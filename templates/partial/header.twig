<nav id="main-menu" class="navbar navbar-expand-lg navbar-dark p-0">
    <div class="container py-2 border-bottom">

        <a class="navbar-brand" href="{{ site.link }}">
            <img src="{{ logo }}" alt="{{ site.title }}" style="max-height: 62px">
        </a>

        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainmenu-collapse">
            <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse py-4" id="mainmenu-collapse">
        {% if menuPrimary %}
            <ul class="navbar-nav ms-auto">
                {% for item in menuPrimary.get_items %}
                    <li class="nav-item">
                        <a class="nav-link {% if item.current %}active{% endif %}" target="{{ item.target }}" href="{{ item.link }}">
                            <span>{{ item.title }}</span>
                        </a>
                    </li>
                {% endfor %}
            </ul>
        {% endif %}
        </div>

    </div>
</nav>